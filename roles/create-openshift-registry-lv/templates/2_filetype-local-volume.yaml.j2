apiVersion: "local.storage.openshift.io/v1"
kind: "LocalVolume"
metadata:
  name: "local-disks"
  namespace: "local-storage"
spec:
  nodeSelector:
    nodeSelectorTerms:
    - matchExpressions:
        - key: kubernetes.io/hostname
          operator: In
          values:
          - {{sl_ocp_registry_storage_worker.0}}.{{ base_domain_prefix }}.{{ base_domain }} 
  storageClassDevices:
    - storageClassName: "local-sc"
      volumeMode: Filesystem
      fsType: ext4
      devicePaths:
        - {{device_path}}